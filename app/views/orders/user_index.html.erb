<h1>Exibindo os pedidos para o buffet <%= @buffet.name %></h1>

<div class="order-title"><h2 class="order-type">Pedidos pendentes</h2></div>

<div class="event-card-container pending-events">
  <% @pending_orders.each do |order| %>
    <div class="event-card">
      <div>
        <h2 class="event-card-title"><strong>Data do Evento: </strong><%= I18n.localize(order.event_date) %></h2>
        <div class="event-card-description"><strong>Código: </strong><%= order.code %></div>
        <%= link_to 'Mostrar Detalhes', order_path(order.id), class: 'show-details-button' %>
      </div>
    </div>
  <% end %>
</div>

<div class="order-title"><h2 class="order-type">Demais pedidos</h2></div>

<div class="event-card-container general-events">
  <% @general_orders.each do |order| %>
    <div class="event-card">
      <div>
        <h2 class="event-card-title"><strong>Data do Evento: </strong><%= I18n.localize(order.event_date) %></h2>
        <div class="event-card-description"><strong>Código: </strong><%= order.code %></div>
        <%= link_to 'Mostrar Detalhes', order_path(order.id), class: 'show-details-button' %>
      </div>
    </div>
  <% end %>
</div>